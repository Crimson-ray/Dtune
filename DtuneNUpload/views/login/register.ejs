
<% layout('./layouts/boilerplate') %>
<form action="/users/register" method="post" class="bg-white p-8 rounded-lg shadow-md w-80 mx-auto">
    <h1 class="text-2xl font-semibold text-center mb-6">Register</h1>
    <div class="mb-4">
        <label for="username" class="block text-gray-700 mb-2">Username</label>
        <input type="text" name="username" id="username" placeholder="Username" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div class="mb-4">
        <label for="email" class="block text-gray-700 mb-2">Email</label>
        <input type="email" name="email" id="email" placeholder="Email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div class="mb-6">
        <label for="password" class="block text-gray-700 mb-2">Password</label>
        <input type="password" name="password" id="password" placeholder="Password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div class="flex justify-center">
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">Sign Up</button>
    </div>
    <div class="text-center mt-4">
       <span>Have an account?<a href="/users/login" class="text-blue-600 hover:text-blue-800 ">Sign In</a></span> 
    </div>
 </div>
</form>
